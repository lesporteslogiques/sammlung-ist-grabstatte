script/source = "extends Node2D

signal play_pressed()
signal quit_pressed()

var over_play = false
var over_quit = false
@onready var play_btn = $ButtonPlay/Label
@onready var quit_btn = $ButtonQuit/Label

# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	pass # Replace with function body.

# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(delta: float) -> void:
	pass


func _input(event):
	# Mouse in viewport coordinates.
	if event is InputEventMouseButton:
		if over_play:
			emit_signal(\"play_pressed\")
		elif over_quit:
			emit_signal(\"quit_pressed\")


func _on_button_play_mouse_entered() -> void:
	over_play = true
	play_btn.scale = Vector2(1.1, 1.1)


func _on_button_play_mouse_exited() -> void:
	over_play = false
	play_btn.scale = Vector2(1.0, 1.0)


func _on_button_quit_mouse_entered() -> void:
	over_quit = true
	quit_btn.scale = Vector2(1.1, 1.1)

func _on_button_quit_mouse_exited() -> void:
	over_quit = false
	quit_btn.scale = Vector2(1.0, 1.0)
"

